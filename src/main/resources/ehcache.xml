<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         name="PublisherCM"
         updateCheck="false"
         maxBytesLocalHeap="50M">

    <!--
      This is a default configuration, it is re-configured by the CacheConfiguration Spring Bean, using the
      properties from the resources/config/*.yml files.
    -->

    <diskStore path="java.io.tmpdir" />

    <!-- Default sizeOfPolicy for computing the size of cache elements in memory -->
    <sizeOfPolicy maxDepth="2000" maxDepthExceededBehavior="abort"/>

    <defaultCache statistics="true" eternal="false" overflowToDisk="false" />

    <cache name="org.esupportail.publisher.domain.User" timeToLiveSeconds="3600">
    </cache>

